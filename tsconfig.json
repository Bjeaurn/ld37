{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "outDir": "build/",
        "module": "umd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/",
        "**/*.spec.ts"
    ]
}
